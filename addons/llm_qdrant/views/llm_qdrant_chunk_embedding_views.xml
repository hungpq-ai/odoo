<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Tree View for Qdrant Chunk Embeddings -->
    <record id="view_llm_qdrant_chunk_embedding_tree" model="ir.ui.view">
        <field name="name">llm.qdrant.chunk.embedding.tree</field>
        <field name="model">llm.qdrant.chunk.embedding</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="chunk_id" />
                <field name="resource_id" />
                <field name="collection_id" />
                <field name="qdrant_point_id" />
                <field name="qdrant_collection_name" />
                <field name="store_id" />
            </list>
        </field>
    </record>

    <!-- Form View for Qdrant Chunk Embeddings -->
    <record id="view_llm_qdrant_chunk_embedding_form" model="ir.ui.view">
        <field name="name">llm.qdrant.chunk.embedding.form</field>
        <field name="model">llm.qdrant.chunk.embedding</field>
        <field name="arch" type="xml">
            <form string="Qdrant Chunk Embedding">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="chunk_id" />
                            <field name="resource_id" />
                            <field name="collection_id" />
                        </group>
                        <group>
                            <field name="qdrant_point_id" />
                            <field name="qdrant_collection_name" />
                            <field name="store_id" />
                        </group>
                    </group>
                    <group string="Payload (Metadata)">
                        <field name="payload" nolabel="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View for Qdrant Chunk Embeddings -->
    <record id="view_llm_qdrant_chunk_embedding_search" model="ir.ui.view">
        <field name="name">llm.qdrant.chunk.embedding.search</field>
        <field name="model">llm.qdrant.chunk.embedding</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="chunk_id" />
                <field name="resource_id" />
                <field name="collection_id" />
                <field name="qdrant_collection_name" />
                <group expand="0" string="Group By">
                    <filter
                        string="Qdrant Collection"
                        name="group_by_qdrant_collection"
                        domain="[]"
                        context="{'group_by':'qdrant_collection_name'}"
                    />
                    <filter
                        string="Store"
                        name="group_by_store"
                        domain="[]"
                        context="{'group_by':'store_id'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Qdrant Chunk Embeddings -->
    <record id="action_llm_qdrant_chunk_embedding" model="ir.actions.act_window">
        <field name="name">Qdrant Chunk Embeddings</field>
        <field name="res_model">llm.qdrant.chunk.embedding</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No Qdrant chunk embeddings found</p>
            <p>Embeddings will appear here after resources are processed with a Qdrant vector store.</p>
        </field>
    </record>

    <!-- Refresh Button Action -->
    <record id="action_refresh_qdrant_embeddings" model="ir.actions.server">
        <field name="name">Refresh Qdrant Embeddings</field>
        <field name="model_id" ref="model_llm_qdrant_chunk_embedding" />
        <field name="binding_model_id" ref="model_llm_qdrant_chunk_embedding" />
        <field name="state">code</field>
        <field name="code">action = model.action_refresh_embeddings()</field>
    </record>
</odoo>
