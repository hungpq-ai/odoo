<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="llm_usage_log_view_tree" model="ir.ui.view">
        <field name="name">llm.usage.log.tree</field>
        <field name="model">llm.usage.log</field>
        <field name="arch" type="xml">
            <list>
                <field name="request_date"/>
                <field name="user_id"/>
                <field name="model_id"/>
                <field name="provider_id"/>
                <field name="request_type"/>
                <field name="tokens_input" sum="Total Input"/>
                <field name="tokens_output" sum="Total Output"/>
                <field name="tokens_total" sum="Total Tokens"/>
                <field name="cost" sum="Total Cost"/>
                <field name="response_time" avg="Avg Response"/>
                <field name="status" widget="badge"
                       decoration-success="status == 'success'"
                       decoration-danger="status == 'error'"
                       decoration-warning="status == 'timeout'"/>
                <field name="feedback" widget="badge"
                       decoration-success="feedback == 'like'"
                       decoration-danger="feedback == 'dislike'"
                       optional="show"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="llm_usage_log_view_form" model="ir.ui.view">
        <field name="name">llm.usage.log.form</field>
        <field name="model">llm.usage.log</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_set_feedback_like"
                                icon="fa-thumbs-up" invisible="feedback == 'like'">
                            <span>Like</span>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_set_feedback_dislike"
                                icon="fa-thumbs-down" invisible="feedback == 'dislike'">
                            <span>Dislike</span>
                        </button>
                    </div>
                    <group>
                        <group string="Request Info">
                            <field name="request_date"/>
                            <field name="user_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="request_type"/>
                            <field name="status"/>
                        </group>
                        <group string="Model Info">
                            <field name="model_id"/>
                            <field name="provider_id"/>
                            <field name="model_name"/>
                        </group>
                    </group>
                    <group>
                        <group string="Token Usage">
                            <field name="tokens_input"/>
                            <field name="tokens_output"/>
                            <field name="tokens_total"/>
                        </group>
                        <group string="Performance">
                            <field name="cost"/>
                            <field name="response_time"/>
                        </group>
                    </group>
                    <group string="Source" invisible="not source_model">
                        <field name="source_model"/>
                        <field name="source_record_id"/>
                    </group>
                    <group string="Feedback" invisible="not feedback">
                        <field name="feedback"/>
                        <field name="feedback_comment"/>
                        <field name="message_id" invisible="not message_id"/>
                    </group>
                    <group string="Error" invisible="status != 'error'">
                        <field name="error_message" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="llm_usage_log_view_search" model="ir.ui.view">
        <field name="name">llm.usage.log.search</field>
        <field name="model">llm.usage.log</field>
        <field name="arch" type="xml">
            <search>
                <field name="user_id"/>
                <field name="model_id"/>
                <field name="provider_id"/>
                <field name="request_type"/>
                <separator/>
                <filter string="Today" name="today" domain="[('request_date_day', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="This Week" name="this_week" domain="[('request_date', '>=', (context_today() - relativedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="this_month" domain="[('request_date', '>=', context_today().strftime('%Y-%m-01'))]"/>
                <separator/>
                <filter string="Success" name="success" domain="[('status', '=', 'success')]"/>
                <filter string="Errors" name="errors" domain="[('status', '=', 'error')]"/>
                <separator/>
                <filter string="Liked" name="liked" domain="[('feedback', '=', 'like')]"/>
                <filter string="Disliked" name="disliked" domain="[('feedback', '=', 'dislike')]"/>
                <separator/>
                <filter string="My Requests" name="my_requests" domain="[('user_id', '=', uid)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="User" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Model" name="group_model" context="{'group_by': 'model_id'}"/>
                    <filter string="Provider" name="group_provider" context="{'group_by': 'provider_id'}"/>
                    <filter string="Request Type" name="group_type" context="{'group_by': 'request_type'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Feedback" name="group_feedback" context="{'group_by': 'feedback'}"/>
                    <separator/>
                    <filter string="Day" name="group_day" context="{'group_by': 'request_date_day'}"/>
                    <filter string="Week" name="group_week" context="{'group_by': 'request_date_week'}"/>
                    <filter string="Month" name="group_month" context="{'group_by': 'request_date_month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Pivot View - Usage Analytics -->
    <record id="llm_usage_log_view_pivot" model="ir.ui.view">
        <field name="name">llm.usage.log.pivot</field>
        <field name="model">llm.usage.log</field>
        <field name="arch" type="xml">
            <pivot string="LLM Usage Analytics" sample="1">
                <field name="request_date_day" type="row"/>
                <field name="user_id" type="col"/>
                <field name="tokens_total" type="measure"/>
                <field name="cost" type="measure"/>
                <field name="response_time" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View - Requests Over Time -->
    <record id="llm_usage_log_view_graph" model="ir.ui.view">
        <field name="name">llm.usage.log.graph</field>
        <field name="model">llm.usage.log</field>
        <field name="arch" type="xml">
            <graph string="LLM Usage Over Time" type="line" sample="1">
                <field name="request_date_day"/>
                <field name="tokens_total" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Graph View - Token Usage by Model -->
    <record id="llm_usage_log_view_graph_by_model" model="ir.ui.view">
        <field name="name">llm.usage.log.graph.by.model</field>
        <field name="model">llm.usage.log</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <graph string="Token Usage by Model" type="bar" sample="1">
                <field name="model_id"/>
                <field name="tokens_total" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Graph View - Cost by User -->
    <record id="llm_usage_log_view_graph_cost" model="ir.ui.view">
        <field name="name">llm.usage.log.graph.cost</field>
        <field name="model">llm.usage.log</field>
        <field name="priority">30</field>
        <field name="arch" type="xml">
            <graph string="Cost by User" type="pie" sample="1">
                <field name="user_id"/>
                <field name="cost" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action - Main Dashboard -->
    <record id="llm_usage_log_action" model="ir.actions.act_window">
        <field name="name">Usage Analytics</field>
        <field name="res_model">llm.usage.log</field>
        <field name="view_mode">pivot,graph,list,form</field>
        <field name="context">{'search_default_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No usage data yet!
            </p>
            <p>
                Usage statistics will appear here as AI requests are made.
            </p>
        </field>
    </record>

    <!-- Action - Requests List -->
    <record id="llm_usage_log_action_list" model="ir.actions.act_window">
        <field name="name">Request Log</field>
        <field name="res_model">llm.usage.log</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_today': 1}</field>
    </record>

    <!-- Action - Top Users -->
    <record id="llm_usage_log_action_top_users" model="ir.actions.act_window">
        <field name="name">Top Users</field>
        <field name="res_model">llm.usage.log</field>
        <field name="view_mode">pivot,graph</field>
        <field name="context">{
            'search_default_this_month': 1,
            'search_default_group_user': 1,
            'pivot_measures': ['tokens_total', 'cost', '__count']
        }</field>
    </record>

    <!-- Action - Cost Analysis -->
    <record id="llm_usage_log_action_cost" model="ir.actions.act_window">
        <field name="name">Cost Analysis</field>
        <field name="res_model">llm.usage.log</field>
        <field name="view_mode">pivot,graph</field>
        <field name="view_id" ref="llm_usage_log_view_graph_cost"/>
        <field name="context">{
            'search_default_this_month': 1,
            'pivot_measures': ['cost']
        }</field>
    </record>

    <!-- Pivot View - Feedback Report -->
    <record id="llm_usage_log_view_pivot_feedback" model="ir.ui.view">
        <field name="name">llm.usage.log.pivot.feedback</field>
        <field name="model">llm.usage.log</field>
        <field name="arch" type="xml">
            <pivot string="Feedback Report" sample="1">
                <field name="feedback" type="row"/>
                <field name="model_id" type="row"/>
                <field name="user_id" type="col"/>
            </pivot>
        </field>
    </record>

    <!-- Action - Feedback Report -->
    <record id="llm_usage_log_action_feedback" model="ir.actions.act_window">
        <field name="name">Feedback Report</field>
        <field name="res_model">llm.usage.log</field>
        <field name="view_mode">pivot,list</field>
        <field name="view_id" ref="llm_usage_log_view_pivot_feedback"/>
        <field name="domain">[('feedback', '!=', False)]</field>
        <field name="context">{}</field>
    </record>
</odoo>
