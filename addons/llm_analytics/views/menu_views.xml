<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Menu under LLM -->
    <menuitem
        id="menu_llm_analytics"
        name="Analytics"
        parent="llm.menu_llm_root"
        sequence="110"
        groups="llm.group_llm_manager"/>

    <!-- Dashboard Action (Client Action) -->
    <record id="action_llm_analytics_dashboard" model="ir.actions.client">
        <field name="name">AI Analytics Dashboard</field>
        <field name="tag">llm_analytics_dashboard</field>
    </record>

    <!-- Dashboard Menu -->
    <menuitem
        id="menu_llm_analytics_dashboard"
        name="Dashboard"
        parent="menu_llm_analytics"
        action="action_llm_analytics_dashboard"
        sequence="10"/>

    <!-- Request Log -->
    <menuitem
        id="menu_llm_analytics_requests"
        name="Request Log"
        parent="menu_llm_analytics"
        action="llm_usage_log_action_list"
        sequence="20"/>

    <!-- Reports submenu -->
    <menuitem
        id="menu_llm_analytics_reports"
        name="Reports"
        parent="menu_llm_analytics"
        sequence="30"/>

    <!-- Top Users Dashboard Action -->
    <record id="action_llm_top_users_dashboard" model="ir.actions.client">
        <field name="name">Top Users Report</field>
        <field name="tag">llm_top_users_dashboard</field>
    </record>

    <menuitem
        id="menu_llm_analytics_top_users"
        name="Top Users"
        parent="menu_llm_analytics_reports"
        action="action_llm_top_users_dashboard"
        sequence="10"/>

    <menuitem
        id="menu_llm_analytics_cost"
        name="Cost Analysis"
        parent="menu_llm_analytics_reports"
        action="llm_usage_log_action_cost"
        sequence="20"/>

    <!-- Feedback Dashboard Action -->
    <record id="action_llm_feedback_dashboard" model="ir.actions.client">
        <field name="name">Feedback Report</field>
        <field name="tag">llm_feedback_dashboard</field>
    </record>

    <menuitem
        id="menu_llm_analytics_feedback"
        name="Feedback Report"
        parent="menu_llm_analytics_reports"
        action="action_llm_feedback_dashboard"
        sequence="30"/>
</odoo>
