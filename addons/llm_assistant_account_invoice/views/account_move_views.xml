<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Add "Process with AI" button to invoice form -->
    <record id="view_move_form_process_ai" model="ir.ui.view">
        <field name="name">account.move.form.process.ai</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button
          name="action_process_with_ai"
          type="object"
          string="Process with AI"
          class="btn-primary"
          invisible="state != 'draft'"
        />
            </xpath>
        </field>
    </record>
</odoo>
