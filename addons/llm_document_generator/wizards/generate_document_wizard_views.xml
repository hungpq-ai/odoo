<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Generate Document Wizard Form -->
    <record id="llm_generate_document_wizard_view_form" model="ir.ui.view">
        <field name="name">llm.generate.document.wizard.form</field>
        <field name="model">llm.generate.document.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Document">
                <group>
                    <field name="template_id" options="{'no_create': True}"/>
                    <field name="category_id"/>
                </group>
                <group>
                    <field name="requirements" placeholder="Enter detailed requirements for the document to be generated..."/>
                </group>
                <group>
                    <field name="model_id" options="{'no_create': True}"/>
                </group>
                <div class="alert alert-info">
                    <i class="fa fa-info-circle"/> Document generation may take 30-60 seconds. Please wait after clicking the button.
                </div>
                <footer>
                    <button name="action_generate_now" type="object" string="Generate Document" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="llm_generate_document_wizard_action" model="ir.actions.act_window">
        <field name="name">Generate Document</field>
        <field name="res_model">llm.generate.document.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
