<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template Form View -->
    <record id="llm_document_template_view_form" model="ir.ui.view">
        <field name="name">llm.document.template.form</field>
        <field name="model">llm.document.template</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- Main action button -->
                    <button name="action_embed_template" type="object"
                            string="Embed Template"
                            class="btn-primary"
                            invisible="not sample_content or not knowledge_collection_id or is_embedded"/>
                    <button name="action_embed_template" type="object"
                            string="Re-embed Template"
                            class="btn-secondary"
                            invisible="not sample_content or not knowledge_collection_id or not is_embedded"/>
                    <!-- Status badge -->
                    <field name="is_embedded" widget="badge"
                           decoration-success="is_embedded"
                           decoration-warning="not is_embedded"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_generations" icon="fa-file-text-o">
                            <field name="generation_count" widget="statinfo" string="Generated"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Embedded" bg_color="text-bg-success"
                            invisible="not is_embedded"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Template name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="category_id"/>
                        </group>
                        <group>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>

                    <notebook>
                        <!-- Tab 1: Sample Content -->
                        <page string="Sample Content" name="sample">
                            <!-- Upload section -->
                            <group>
                                <group string="1. Upload sample file">
                                    <field name="sample_file" filename="sample_filename"/>
                                    <field name="sample_filename" invisible="1"/>
                                    <div class="text-muted small" colspan="2">
                                        Supported: DOCX, PDF, TXT, MD - Content will be automatically extracted
                                    </div>
                                </group>
                                <group string="2. Select Collection to Embed">
                                    <field name="knowledge_collection_id"
                                           placeholder="Select collection..."
                                           options="{'no_create': False, 'no_quick_create': True}"/>
                                    <field name="knowledge_resource_id" readonly="1"
                                           invisible="not knowledge_resource_id"/>
                                </group>
                            </group>

                            <!-- Status indicator -->
                            <div class="alert alert-info" invisible="sample_content or is_embedded">
                                <strong>Upload a sample file</strong> to get started. Content will be automatically extracted.
                            </div>

                            <div class="alert alert-warning" invisible="not sample_content or knowledge_collection_id or is_embedded">
                                <strong>Select a Knowledge Collection</strong> then click <b>"Embed Template"</b> to complete.
                            </div>

                            <div class="alert alert-primary" invisible="not sample_content or not knowledge_collection_id or is_embedded">
                                <strong>Click "Embed Template"</strong> in the header to save template to Knowledge Base.
                                <br/>
                                <small class="text-muted">Saves ~70% tokens when generating documents.</small>
                            </div>

                            <!-- Success message when embedded -->
                            <div class="alert alert-success" invisible="not is_embedded">
                                <strong>Template has been embedded!</strong>
                                When generating, the system will automatically find the relevant sample parts.
                                <br/>
                                <small class="text-muted">If you change the content, click "Re-embed" to update.</small>
                            </div>

                            <!-- Extracted content (readonly display or editable) -->
                            <group string="Extracted Content" invisible="not sample_content">
                                <field name="sample_content" nolabel="1"
                                       style="min-height: 300px;"/>
                            </group>
                        </page>

                        <!-- Tab 2: AI Configuration -->
                        <page string="AI Configuration" name="prompts">
                            <group>
                                <field name="system_prompt" placeholder="Instructions for AI about role and writing style..."/>
                            </group>
                            <group>
                                <field name="user_prompt_template" placeholder="Prompt template to send to AI..."/>
                            </group>
                            <div class="alert alert-info">
                                <strong>Variables available in User Prompt:</strong>
                                <ul class="mb-0 mt-2">
                                    <li><code>{sample}</code> - Sample content (or relevant chunks if embedded)</li>
                                    <li><code>{context}</code> - User requirements</li>
                                </ul>
                            </div>
                        </page>

                        <!-- Tab 3: Other Information -->
                        <page string="Information" name="info">
                            <group>
                                <group string="General Information">
                                    <field name="code"/>
                                    <field name="sequence"/>
                                    <field name="description"/>
                                </group>
                                <group string="Statistics">
                                    <field name="generation_count" readonly="1"/>
                                    <field name="create_date" readonly="1"/>
                                    <field name="write_date" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Template Tree View -->
    <record id="llm_document_template_view_tree" model="ir.ui.view">
        <field name="name">llm.document.template.tree</field>
        <field name="model">llm.document.template</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="category_id"/>
                <field name="is_embedded" widget="boolean" string="RAG"/>
                <field name="knowledge_collection_id" optional="hide"/>
                <field name="generation_count" string="Generated"/>
                <field name="active" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Template Kanban View -->
    <record id="llm_document_template_view_kanban" model="ir.ui.view">
        <field name="name">llm.document.template.kanban</field>
        <field name="model">llm.document.template</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="category_id"/>
                <field name="is_embedded"/>
                <field name="generation_count"/>
                <templates>
                    <t t-name="card">
                        <div class="d-flex justify-content-between">
                            <field name="name" class="fw-bold"/>
                            <span t-if="record.is_embedded.raw_value" class="badge text-bg-success">RAG âœ“</span>
                            <span t-else="" class="badge text-bg-secondary">No RAG</span>
                        </div>
                        <div class="text-muted small">
                            <field name="category_id"/>
                        </div>
                        <div class="mt-2">
                            <span class="badge text-bg-info">
                                <field name="generation_count"/> generated
                            </span>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Template Search View -->
    <record id="llm_document_template_view_search" model="ir.ui.view">
        <field name="name">llm.document.template.search</field>
        <field name="model">llm.document.template</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="category_id"/>
                <field name="knowledge_collection_id"/>
                <separator/>
                <filter string="Embedded (RAG)" name="embedded" domain="[('is_embedded', '=', True)]"/>
                <filter string="Not Embedded" name="not_embedded" domain="[('is_embedded', '=', False)]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Collection" name="group_collection" context="{'group_by': 'knowledge_collection_id'}"/>
                    <filter string="RAG Status" name="group_embedded" context="{'group_by': 'is_embedded'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Template Action -->
    <record id="llm_document_template_action" model="ir.actions.act_window">
        <field name="name">Document Templates</field>
        <field name="res_model">llm.document.template</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first document template!
            </p>
            <p>
                Upload or enter sample text content for AI to reference when generating new documents.
            </p>
            <p class="text-muted">
                <b>Tip:</b> Use the <b>RAG (Embed Template)</b> feature to save tokens
                and speed up generation for long templates.
            </p>
        </field>
    </record>
</odoo>
