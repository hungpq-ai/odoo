<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Generation Form View -->
    <record id="llm_document_generation_view_form" model="ir.ui.view">
        <field name="name">llm.document.generation.form</field>
        <field name="model">llm.document.generation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- Draft state buttons -->
                    <button name="action_generate" type="object" string="Generate Document" class="btn-primary" invisible="state != 'draft'" confirm="Document generation may take 30-60 seconds. Click OK to start."/>

                    <!-- Done state buttons -->
                    <button name="action_start_review" type="object" string="Review &amp; Edit" class="btn-primary" invisible="state != 'done'"/>
                    <button name="action_regenerate" type="object" string="Regenerate" class="btn-secondary" invisible="state not in ('done', 'error')" confirm="Regenerate document? This may take 30-60 seconds."/>
                    <button name="action_export_pdf" type="object" string="Download PDF" class="btn-success" invisible="state not in ('done', 'review')"/>
                    <button name="action_export_docx" type="object" string="Download DOCX" class="btn-success" invisible="state not in ('done', 'review')"/>

                    <!-- Review state buttons -->
                    <button name="action_apply_review" type="object" string="Apply Feedback" class="btn-primary" invisible="state != 'review'" confirm="AI will edit the document based on your feedback. Continue?"/>
                    <button name="action_approve_document" type="object" string="Approve Document" class="btn-success" invisible="state != 'review'"/>

                    <!-- Common buttons -->
                    <button name="action_reset_draft" type="object" string="Reset to Draft" invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,generating,review,done"/>
                </header>
                <sheet>
                    <!-- Loading indicator when generating -->
                    <div invisible="state != 'generating'" class="alert alert-info text-center">
                        <i class="fa fa-spinner fa-spin fa-2x"/>
                        <h4>Processing...</h4>
                    </div>

                    <!-- Review stats badge -->
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_start_review" icon="fa-edit" invisible="state not in ('done', 'review')">
                            <field name="review_count" widget="statinfo" string="Reviews"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Document name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="template_id" readonly="state != 'draft'"/>
                        <field name="selected_model_id" readonly="state not in ('draft', 'review')" invisible="state not in ('draft', 'review')"/>
                    </group>
                    <group invisible="state != 'draft'">
                        <field name="requirements"/>
                    </group>

                    <!-- Error message -->
                    <div invisible="state != 'error'" class="alert alert-danger">
                        <strong>Error:</strong>
                        <field name="error_message" nolabel="1"/>
                    </div>

                    <!-- Review panel -->
                    <div invisible="state != 'review'" class="alert alert-warning">
                        <h5><i class="fa fa-edit"/> Review Mode</h5>
                        <p>View the content below and enter feedback for AI to edit.</p>
                    </div>
                    <group invisible="state != 'review'" string="Edit Feedback">
                        <field name="review_feedback" nolabel="1" placeholder="Enter edit feedback...&#10;&#10;Examples:&#10;- Edit section 2.1: add details about payment process&#10;- 'Functional Requirements' table: add 'Priority' column&#10;- Conclusion section: make it more concise"/>
                    </group>

                    <!-- Review history -->
                    <div invisible="not review_history" class="mt-3">
                        <h5 style="font-weight: bold; margin-bottom: 10px;">Review History</h5>
                        <field name="review_history" nolabel="1" readonly="1"/>
                    </div>

                    <!-- Generated content -->
                    <notebook invisible="state not in ('done', 'review')">
                        <page string="Content" name="content">
                            <field name="generated_content" readonly="1"/>
                        </page>
                        <page string="Markdown" name="markdown">
                            <field name="generated_markdown" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Generation Tree View -->
    <record id="llm_document_generation_view_tree" model="ir.ui.view">
        <field name="name">llm.document.generation.tree</field>
        <field name="model">llm.document.generation</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="template_id"/>
                <field name="review_count" string="Reviews"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'done'"
                       decoration-warning="state in ('generating', 'review')"
                       decoration-danger="state == 'error'"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- Generation Search View -->
    <record id="llm_document_generation_view_search" model="ir.ui.view">
        <field name="name">llm.document.generation.search</field>
        <field name="model">llm.document.generation</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="template_id"/>
                <field name="category_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Review" name="review" domain="[('state', '=', 'review')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Error" name="error" domain="[('state', '=', 'error')]"/>
                <separator/>
                <filter string="Reviewed" name="reviewed" domain="[('review_count', '>', 0)]"/>
                <filter string="My Documents" name="my_docs" domain="[('create_uid', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="Document Type" name="group_template" context="{'group_by': 'template_id'}"/>
                    <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Generation Action -->
    <record id="llm_document_generation_action" model="ir.actions.act_window">
        <field name="name">Generated Documents</field>
        <field name="res_model">llm.document.generation</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_my_docs': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No documents yet!
            </p>
            <p>
                Use the "Create New" menu to generate a new document.
            </p>
        </field>
    </record>
</odoo>
